<h2>Change Photographer</h2>

<form action="/edit_photographer_to_database">
  
  <select name="photographer[id]">
    <% @photographer.each do |p| %>
      <option value="<%= p.id %>"><%= p.name %></option>
    <% end %>
  </select>
    
  <input type="text" placeholder="Photographer Name" name="photographer[name]">
  <input type="text" placeholder="Camera type used" name="photographer[cameratype]">  
  <input type="text" placeholder="Employer" name="photographer[employer]">

  <button type="submit">Add Photographer</button>
</form>

<p><a href='/home'>Go to Home Page</a></p>